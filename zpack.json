{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.0.3/resources/zpack-schema.json",
  "name": "simplicity",
  "version": "0.0.1",
  "description": "Sleek and simple zebar",
  "tags": [
    "transparent",
    "black and white"
  ],
  "previewImages": [
    "resources\\preview-image-1.png"
  ],
  "repositoryUrl": "",
  "widgets": [
    {
      "name": "index",
      "htmlPath": "index/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "index/**"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "30px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
